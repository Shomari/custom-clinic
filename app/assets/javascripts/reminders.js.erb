	$("#remind_tab_"+adds).removeClass("hidden-reminder");
}

function countDoctors(doctors){
	var index = []
 	for (var i=0; i < doctors.length; i++){
 		if (!_.isEmpty(doctors[i].name) && !_.isEmpty(doctors[i].speciality) && !_.isEmpty(doctors[i].bio)){
 			index.push(i);  					
 		}
 	}  	
 return index;
}

