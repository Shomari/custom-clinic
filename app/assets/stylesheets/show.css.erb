@import url(http://fonts.googleapis.com/css?family=Varela);
@import url(http://fonts.googleapis.com/css?family=Cinzel:900);

body{
	height:100%;
	background-color: rgb(110, 44, 141);
}

.container{
	background-color: white;
	border-radius: 10px;
	border-style: solid;
	border-color: rgb(131, 119, 119);
	margin-bottom: 20px;
}

#clinic-container{
	background-color: white;
	width: 30%;
	border-radius: 10px;
	border-style: solid;
	border-color: rgb(131, 119, 119);
	margin-bottom: 20px;
	/*padding-left: -200px;*/
}

.sign-field{
	margin-right: inherit;
}

#clinic-form{
	margin-top: 200px;
}



#first-tab{
	width: 33%;
	font-size: 150%;
}

#second-tab{
	width: 33%;
	font-size: 150%;	
}

#third-tab{
	width: 31%;
	font-size: 150%;	
}

#login-box{
	padding-bottom: 40px;
	margin-top: 140px;
}

#login-box .email{
	margin-bottom: 2px;
	margin-right: auto;
}

#login-box .password{
	margin-right: auto;
}

.navbar-brand img{
	margin-top: -11px;
}

.navbar-default{
	background-color: white;
	border-radius: 0px;
}

#nav-heading{
	margin-top: 3px;
	padding-top: 2px;
	font-family: 'Cinzel', serif;
	color: #6F2799;
	font-weight: 900;
}

.form-group{
	margin-right: 20px;
}

.temp{
	border-color: red;
	border-style: solid; 
}

.tab-content{
	padding: 10px;
}

.hidden{
	display: none;
}

.hidden-reminder{
	display: none !important; 
}

#doctor_page{
	padding-top: 50px;
}

.doctor_forms{
	margin-bottom: 8px;
}

#doctor-box{
	margin-top: 120px;
}

#doctor-image img{
	width: 240px;
	height: 350px;
	margin-top: 120px;
}

.doctor-text{
	color: white;
	font-family: "Helvetica";
	
}

#doctor-name{
	font-weight: bold;
	font-size: 40px;
	color: #D9B2FB;
}

.hours-table{
	margin-top: 100px;
}

td h3{
	margin-bottom: 0px;
	margin-top: 10px; 
	font-size: 300%;
}

tr td:first-child{
	font-family: "Courier";
	padding-right: 40px;
	color: #D9B2FB;
}

tr td:nth-child(2){
	font-family: "Helvetica";
	color: #FFFFFF;
	width: 600px;
}


.preview-standard{
	background-image: url('/CMH_template001.jpg');
	background-size: 100% 100%;	
	width: 842px;
	height: 550px;
}

.preview-reminder{
	background-image: url('/reminder_001.jpg');
	background-size: 100% 100%;	
	width: 842px;
	height: 550px;
}

#heading{
	margin-top: 80px;
	color: #D9B2FB;
	font-size: 300%;
}

#message{
	font-size: 250%;
	color: white;
}

#player{
	margin-top: 24px;
