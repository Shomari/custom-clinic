<div class="container" ng-app="clinic">
	<div class="row">
		<ul class="nav nav-tabs col-md-6">
			<li class="active"><a data-toggle="tab" href="#doctor">Doctor's Info</a></li>
			<li><a data-toggle="tab" href="#office">Office Info</a></li>
			<li><a data-toggle="tab" href="#reminders">Patient Reminders</a></li>
		</ul>
	</div> <!-- row -->

	<div class="row">
		<div class="col-md-4 temp">Template 1</div>
		<div class="col-md-4 temp">Template 2</div>
		<div class="col-md-4 temp">Template 3</div>
	</div> <!-- row -->
	<div class="tab-content">

		<div class="tab-pane active" id="doctor">
		<%= simple_form_for @collection, html: {multipart: true}, url: collection_index_path do |m| %>
		
			<%= render partial: "collection/tabs/doctor", locals: { :m => m } %>
		</div>
		<div class="tab-pane" id="office">
			<%= render partial: "collection/tabs/office", locals: { :m => m } %>
		</div>
		<div class="tab-pane" id="reminders">
			<%= render partial: "collection/tabs/reminders", locals: { :m => m } %>
		</div>
			<%= m.submit :submit %>
			<% end %>

	</div> <!-- tab content -->
</div><!--  container -->
