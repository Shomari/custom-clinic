<div class="container col-md-4 col-md-offset-4" id="login-box">

        <h2 class="form-signin-heading text-center" id="sign-in">Please sign in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
            <%= f.input :email, required: false, autofocus: true, class: "form-control sign-field", label: false, placeholder: "Email" %>
            <%= f.input :password, required: false, class: "form-control sign-field", label: false, placeholder: "Password" %>

            <%= f.button :submit, "Sign in", class: "btn btn-lg btn-primary btn-block" %>
        <% end %>

        <%= render "devise/shared/links" %>

    </div> <!-- /container -->