<div class="container" ng-app="clinic">
	<div class="row">
		<ul class="nav nav-tabs">
			<li class="active text-center" id="first-tab"><a data-toggle="tab" href="#doctor">Doctor Biography</a></li>
			<li class="text-center" id="second-tab"><a data-toggle="tab" href="#office">Office Hours</a></li>
			<li class="text-center" id="third-tab"><a data-toggle="tab" href="#reminders" id="reminder-tab">Patient Reminders</a></li>
		</ul>
	</div> <!-- row -->
	<div class="tab-content">
		<div class="tab-pane active" id="doctor">
		<%= simple_form_for @site, html: {multipart: true, id: "form"} do |m| %>
		<%= m.input :clinic_id, as: :hidden, input_html: { value:  @clinic_id} %>
		
			<%= render partial: "sites/tabs/doctor", locals: { :m => m } %>
		</div>
		<div class="tab-pane" id="office">
			<%= render partial: "sites/tabs/office", locals: { :m => m } %>
		</div>
		<div class="tab-pane" id="reminders">
			<%= render partial: "sites/tabs/reminders", locals: { :m => m } %>
		</div>
			<%= m.button :submit, "Submit", :id => "submit" %>
			<% end %>

	</div> <!-- tab content -->
</div><!--  container -->
