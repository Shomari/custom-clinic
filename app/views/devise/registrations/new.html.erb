<div class="container col-md-4 col-md-offset-4" id="login-box">

<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),  class: "form-signin") do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, class: "form-control sign-field", required: true, autofocus: true %>
    <%= f.input :password, class: "form-control sign-field", required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    <%= f.input :password_confirmation, class: "form-control sign-field", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>


</div>